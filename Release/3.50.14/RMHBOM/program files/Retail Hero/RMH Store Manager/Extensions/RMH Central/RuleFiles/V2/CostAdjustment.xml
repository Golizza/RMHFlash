<?xml version="1.0"?>
<BusinessObject ModuleName="RMHC BOM Extension" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Prerequisites />
  <Jobs>
    <Job Name="ItemDynamic" Table="ItemDynamic"/>
    <Job Name="Item" Table="Item"/>
    <Job Name="POD_ReceiptEntry" Table="POD_ReceiptEntry"/>
    <Job Name="POD_OrderEntry" Table="POD_OrderEntry"/>
  </Jobs>
  <JobTemplates>
    <JobTemplate Name="ItemDynamic" Table="ItemDynamic">
      <ForeignFields>
        <ForeignField Name="ItemID" Type="UniqueIdentifier" ReferenceTable="Item" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
      </ForeignFields>
      <Fields>
        <Field Name="StoreID" Type="Int" IsSyncKey="true"  />
        <Field Name="Cost" Type="Money" />
        <Field Name="SyncGuid" Type="UniqueIdentifier" IgnoreForUpdate="true" IsSyncKey="true" />
      </Fields>
    </JobTemplate>
    <JobTemplate Name="Item" Table="Item">
      <Field Name="SyncGuid" Type="UniqueIdentifier" IgnoreForUpdate="true" IsSyncKey="true" />
      <Field Name="LastCost" Type="Money" />
      <Field Name="LastUpdated" Type="DateTime" />

    </JobTemplate>
    <JobTemplate Name="POD_ReceiptEntry" Table="POD_ReceiptEntry">
      <Field Name="SyncGuid" Type="UniqueIdentifier" IgnoreForUpdate="true" IsSyncKey="true" />
      <Field Name="UnitCostInv" Type="Money" />
    </JobTemplate>
    <JobTemplate Name="POD_OrderEntry" Table="POD_OrderEntry">
      <Field Name="SyncGuid" Type="UniqueIdentifier" IgnoreForUpdate="true" IsSyncKey="true" />
      <Field Name="UnitCost" Type="Money" />
    </JobTemplate>
  </JobTemplates>
</BusinessObject>