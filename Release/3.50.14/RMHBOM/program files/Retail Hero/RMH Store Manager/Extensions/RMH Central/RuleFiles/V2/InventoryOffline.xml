<?xml version="1.0"?>
<BusinessObject ModuleName="RMHC BOM Extension" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Prerequisites/>
  <Jobs>
    <Job IsMandatory="true" Name="borOfflineInventory" Table="InventoryOffline">
      <LinkedJobs />
    </Job>
  </Jobs>
  <JobTemplates>
    <JobTemplate Name="borOfflineInventory" Table="InventoryOffline">
      <ForeignFields>
        <ForeignField Name="ItemID" Type="UniqueIdentifier" ReferenceTable="Item" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
        <ForeignField Name="ReasonCodeID" Type="UniqueIdentifier" ReferenceTable="ReasonCode" ReferenceColumn="SyncGuid" ReferenceReturn="ID"/>
      </ForeignFields>
      <Fields>
        <Field Name="SyncGuid" Type="UniqueIdentifier" IgnoreForUpdate="true" IsSyncKey="true" />
        <Field Name="StoreID" Type="Int" IsMandatory="true" DefaultValue="0" />
        <Field IsMandatory="true" Name="ID" Type="Int" IgnoreForUpdate="true" DefaultValue="0"/>
        <Field Name="PurchaseOrderID" Type="Int" IsMandatory="true" DefaultValue="0"/>
        <Field Name="DetailID" Type="Int" IsMandatory="true" DefaultValue="0"/>
        <Field Name="Quantity" Type="Float"  IsMandatory="true" DefaultValue="0"/>
        <Field Name="Comment" Type="NVarChar" IsMandatory="true" />
        <Field Name="Date" Type="DateTime" IsMandatory="true" DefaultValue="getdate()" />
      </Fields>
    </JobTemplate>
  </JobTemplates>
</BusinessObject>