<?xml version="1.0"?>
<BusinessObject ModuleName="RMHC BOM Extension" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Prerequisites>
    <Prerequisite Table="Serial" Column="SyncGuid" />

  </Prerequisites>
  <Jobs>
    <Job IsMandatory="true" Name="InventoryTransferLog" Table="InventoryTransferLog">
      <LinkedJobs />
    </Job>
  </Jobs>
  <JobTemplates>
    <JobTemplate Name="InventoryTransferLog" Table="InventoryTransferLog">
      <ForeignFields>
        <ForeignField Name="ItemID" Type="UniqueIdentifier" ReferenceTable="Item" ReferenceColumn="SyncGuid" ReferenceReturn="ID"/>
        <ForeignField Name="CashierID" Type="UniqueIdentifier" ReferenceTable="Cashier" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
        <ForeignField Name="DetailID" Type="UniqueIdentifier" ReferenceTable="Serial" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
        <ForeignField Name="ReasonCodeID" Type="UniqueIdentifier" ReferenceTable="ReasonCode" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
        <ForeignField Name="ReferenceID" Type="UniqueIdentifier" ReferenceTable="PurchaseOrder" ReferenceColumn="SyncGuid" ReferenceReturn="ID"  />
        <ForeignField Name="ReferenceEntryID" Type="UniqueIdentifier" ReferenceTable="PurchaseOrderEntry" ReferenceColumn="SyncGuid" ReferenceReturn="ID"/>

      </ForeignFields>
      <Fields>
        <Field IsMandatory="true" Name="ID" Type="Int" IgnoreForUpdate="true" />
        <Field Name="Quantity" Type="Float" IsMandatory="true" DefaultValue="0"/>
        <Field Name="DateTransferred" Type="DateTime" IsMandatory="true" DefaultValue="getdate()"/>
        <Field Name="StoreID" Type="Int" IsMandatory="true" DefaultValue="0"/>
        <Field Name="Type" Type="Int" IsMandatory="true" DefaultValue="0"/>
        <Field Name="Cost" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="BatchNumber" Type="Int" IsMandatory="true" DefaultValue="0"/>
        <Field Name="ComputedQuantity" Type="Float" />
        <Field Name="SyncGuid" Type="UniqueIdentifier" IgnoreForUpdate="true" IsSyncKey="true" />
      </Fields>
    </JobTemplate>
  </JobTemplates>
</BusinessObject>