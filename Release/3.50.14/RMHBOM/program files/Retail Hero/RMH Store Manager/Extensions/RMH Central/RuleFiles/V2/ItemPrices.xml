      </ForeignFields>
      <Fields>
        <Field Name="StoreID" Type="Int" IsSyncKey="true" IsMandatory="true" DefaultValue="0" />
        <Field Name="Quantity" Type="Float" IsMandatory="true" DefaultValue="0"/>
        <Field Name="QuantityCommitted" Type="Float" IsMandatory="true" DefaultValue="0"/>

        <Field Name="Price" Type="Money" IsMandatory="true" DefaultValue="0"/>
