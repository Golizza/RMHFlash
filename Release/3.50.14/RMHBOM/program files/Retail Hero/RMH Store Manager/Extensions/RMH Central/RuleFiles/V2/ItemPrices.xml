        <Field Name="PriceLevelC" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SalePrice" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SaleStartDate" Type="DateTime"/>
        <Field Name="SaleEndDate" Type="DateTime"/>
        <Field Name="Cost" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="MSRP" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="ReorderPoint" Type="Float" />
        <Field Name="RestockLevel" Type="Float" />
        <Field Name="UpperBound" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="LowerBound" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="BuydownPrice" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="BuydownQuantity" Type="Float" IsMandatory="true" DefaultValue="0"/>
        <Field Name="LastReceived" Type="DateTime" />

        <Field Name="SnapShotQuantity" Type="Float"/>
        <Field Name="SnapShotPrice" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotPriceA" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotPriceB" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotPriceC" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotSalePrice" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotSaleStartDate" Type="DateTime"/>
        <Field Name="SnapShotSaleEndDate" Type="DateTime"/>
        <Field Name="SnapShotCost" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotLastCost" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotReplacementCost" Type="Money" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotReorderPoint" Type="Float" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotRestockLevel" Type="Float" IsMandatory="true" DefaultValue="0"/>
        <Field Name="SnapShotUpperBound" Type="Money" IsMandatory="true" DefaultValue="0" />
        <Field Name="SnapShotLowerBound" Type="Money" IsMandatory="true" DefaultValue="0"/>
      </Fields>
    </JobTemplate>
  </JobTemplates>
</BusinessObject>

