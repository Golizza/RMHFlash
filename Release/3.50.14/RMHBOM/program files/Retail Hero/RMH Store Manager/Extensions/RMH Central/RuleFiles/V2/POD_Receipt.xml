<?xml version="1.0"?>
<BusinessObject ModuleName="RMHC BOM Extension" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Prerequisites />
  <Jobs>
    <Job IsMandatory="true" Name="borReceipt" Table="POD_Receipt">
      <LinkedJobs>
        <Job Name="borReceiptItemEntry" Table="POD_ReceiptEntry"/>
      </LinkedJobs>
    </Job>
  </Jobs>
  <JobTemplates>
    <JobTemplate Name="borReceipt" Table="POD_Receipt">
      <ForeignFields>
        <ForeignField Name="SupplierID" Type="UniqueIdentifier" ReferenceTable="Supplier" ReferenceColumn="SyncGuid" ReferenceReturn="ID" ReferenceDestination="ID" />
        <ForeignField Name="CurrencyID" Type="UniqueIdentifier" ReferenceTable="Currency" ReferenceColumn="SyncGuid" ReferenceReturn="ID" ReferenceDestination="ID" />
        <ForeignField Name="PurchaserID" Type="UniqueIdentifier" ReferenceTable="POA_Purchaser" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
        <ForeignField Name="ShipViaID" Type="UniqueIdentifier" ReferenceTable="POA_ShipVia" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />

      </ForeignFields>
      <Fields>
        <Field IsMandatory="true" Name="ID" Type="Int" IgnoreForUpdate="true" IsPrimaryKey="true" />
        <Field Name="StoreID" Type="Int" />
        <Field Name="LinkID" Type="Int" />
        <Field Name="DocType" Type="Int" />
        <Field Name="DocOption" Type="Int" />
        <Field IsMandatory="true" Name="Number" Type="NVarChar" />
        <Field Name="Status" Type="Int" />
        <Field Name="OrderID" Type="Int" />
        <Field Name="OrderNo" Type="Int" />
        <!--<Field Name="SupplierID" Type="Int" />-->
        <Field Name="UserID" Type="Int" />
        <Field IsMandatory="true" Name="DatePosted" Type="DateTime" />
        <Field IsMandatory="true" Name="OrderDate" Type="DateTime" />
        <Field IsMandatory="true" Name="RequiredDate" Type="DateTime" />
        <Field Name="LocationType" Type="Int" />
        <Field Name="LocationID" Type="Int" />
        <Field Name="Reference" Type="NVarChar" />
        <Field Name="AddrTo" Type="NVarChar" />
        <Field Name="ShipTo" Type="NVarChar" />
        <!--<Field Name="PurchaserID" Type="Int" />-->
        <Field Name="Requisitioner" Type="NVarChar" />
        <!--<Field Name="ShipViaID" Type="Int" />-->
        <Field Name="FOBPoint" Type="NVarChar" />
        <Field Name="Freight" Type="NVarChar" />
        <!--<Field Name="CurrencyID" Type="Int" />-->
        <Field Name="ExchangeRate" Type="Float" />
        <Field Name="InvDiscValue" Type="Float" />
        <Field Name="ExternalDocNo" Type="NVarChar" />
        <Field Name="SupplierDocNo" Type="NVarChar" />
        <Field Name="SupplierDelNo" Type="NVarChar" />
        <Field Name="SupplierDelDate" Type="DateTime" />
        <Field Name="PostingComment" Type="NVarChar" />
        <Field Name="TotalAmount" Type="Money" />
        <Field Name="SyncGuid" Type="UniqueIdentifier" IgnoreForUpdate="true" IsSyncKey="true" />
      </Fields>
    </JobTemplate>
    <JobTemplate Name="borReceiptItemEntry" Table="POD_ReceiptEntry">
      <ForeignFields>
        <ForeignField Name="EntryID" Type="UniqueIdentifier" ReferenceTable="Item" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
        <ForeignField Name="ItemTaxId" Type="UniqueIdentifier" ReferenceTable="ItemTax" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
        <ForeignField Name="UOMID" Type="UniqueIdentifier" ReferenceTable="POA_UOM" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
      </ForeignFields>
      <Fields>
        <Field IsMandatory="true" Name="ID" Type="Int" IgnoreForUpdate="true" IsPrimaryKey="true" />
        <Field IsMandatory="true" Name="ReceiptID" Type="Int" />
        <Field Name="StoreID" Type="Int" />
        <Field Name="LinkID" Type="Int" />
        <Field Name="LineNumber" Type="Int" />
        <Field Name="EntryType" Type="Int" />
        <Field Name="OrderNumber" Type="NVarChar" />
        <Field Name="Description" Type="NVarChar" />
        <Field Name="Quantity" Type="Float" />
        <Field Name="QtyInvoiced" Type="Float" />
        <Field Name="QtyPerUOM" Type="Float" />
        <Field Name="UnitCost" Type="Money" />
        <Field Name="LineDiscRate" Type="Float" />
        <Field Name="UnitCostRMS" Type="Money" />
        <Field Name="UnitCostInv" Type="Money" />
        <Field Name="OrderEntryID" Type="Int" />
        <Field Name="InventoryOfflineID" Type="Int" />
        <Field Name="Comment" Type="NVarChar" />
        <Field Name="Correction" Type="Bit" />
        <Field Name="BIDPrice" Type="Bit" />
        <Field Name="SyncGuid" Type="UniqueIdentifier" IgnoreForUpdate="true" IsSyncKey="true" />
      </Fields>
    </JobTemplate>

  </JobTemplates>
</BusinessObject>