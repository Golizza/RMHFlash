    <Prerequisite Table="Cashier" Column="SyncGuid" />
  </Prerequisites>
  <Jobs>
    <Job IsMandatory="true" Name="TimeCard" Table="TimeCard">
      <LinkedJobs />
    </Job>
  </Jobs>
  <JobTemplates>
    <JobTemplate Name="TimeCard" Table="TimeCard">
      <ForeignFields>
        <ForeignField Name="CashierID" Type="UniqueIdentifier" ReferenceTable="Cashier" ReferenceColumn="SyncGuid" ReferenceReturn="ID" />
      </ForeignFields>
      <Fields>
        <Field Name="StoreID" Type="Int" IsMandatory="true" DefaultValue="0"/>
        <Field IsMandatory="true" Name="ID" Type="Int" IgnoreForUpdate="true" DefaultValue="0"/>
        <Field Name="RegisterID" Type="Int" IsMandatory="true" DefaultValue="0"/>
        <Field Name="TimeIn" Type="DateTime" IsMandatory="true"  />
        <Field Name="TimeOut" Type="DateTime" IsMandatory="true"  />
        <Field Name="Hours" Type="Real" IsMandatory="true" DefaultValue="0"/>
        <Field Name="CashierProfile" Type="VarChar" IsMandatory="true" />
        <Field Name="SyncGuid" Type="UniqueIdentifier" IgnoreForUpdate="true" IsSyncKey="true" />
      </Fields>
    </JobTemplate>
  </JobTemplates>
</BusinessObject>